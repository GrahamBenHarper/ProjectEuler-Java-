public class Problem12
{
    public static void main(String[] args)
    {
        int divCount = 0;
        int num = 0;
        boolean notdone = true;
        int i = 1;
        
        while(notdone)
        {
            num = NthTriNum(i);
            divCount = CountDivisorsOf(num);
            if(divCount>500)
                notdone = false;
            System.out.println(divCount);
            i++;
        }
        
        System.out.println("The first triangle number with over 500 divisors is "+num+" with "+divCount+" divisors.");
    }
    
    public static int NthTriNum(int n)
    {
        return n*(n+1)/2;
    }
    
    public static int CountDivisorsOf(int n)
    {
        int count=0;
        for(int i=1; i<=n; i++)
        {
            if(n%i==0)
                count++;
        }
        
        return count;
    }
}